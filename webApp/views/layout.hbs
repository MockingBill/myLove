          <div class="navbar-header">
              <a class="navbar-brand" href="#">
                  <img alt="Monkey" >
              </a>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                  <li><a href="/"><font size="3">Home</font><span class="sr-only"></span></a></li>
                  <li><a href="/timeAxis"><font size="3">TimeAxis</font> <span class="sr-only"></span></a></li>
                  <li><a href="/login" onclick="isLogin('{{session.user._id}}')"><font size="3">SignIn</font><span class="sr-only"></span></a></li>
